{
  "id": "kcc-notify",
  "name": "KCC Office Notifier",
  "description": "Pushes incoming Boss messages and bot replies to KCC Office dashboard via message_received and message_sent hooks",
  "version": "1.1.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "endpoint": {
        "type": "string",
        "description": "KCC Office workflow API endpoint",
        "default": "http://localhost:4200/api/workflow"
      },
      "messagesEndpoint": {
        "type": "string",
        "description": "KCC Office messages API endpoint",
        "default": "http://localhost:4200/api/messages"
      },
      "enabled": {
        "type": "boolean",
        "default": true
      },
      "timeoutMs": {
        "type": "number",
        "default": 2000
      }
    }
  },
  "uiHints": {
    "endpoint": {
      "label": "Workflow Endpoint",
      "placeholder": "http://localhost:4200/api/workflow"
    },
    "messagesEndpoint": {
      "label": "Messages Endpoint",
      "placeholder": "http://localhost:4200/api/messages"
    },
    "enabled": {
      "label": "Enable Notifications"
    },
    "timeoutMs": {
      "label": "Request Timeout (ms)"
    }
  }
}
